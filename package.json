{
  "name": "apptify",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "commit": "git add . && cz",
    "create:dev": "pnpm --filter @apptify/create dev",
    "common:build": "pnpm --filter @apptify/common build",
    "release": "release-it"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "commit-msg": "npx --no -- commitlint --edit ${1}"
  },
  "nano-staged": {
    "/packages/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "template-*",
      "dist"
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "endOfLine": "auto"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    },
    "gitlab": {
      "release": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "# 版本记录",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "功能新增"
            },
            {
              "type": "fix",
              "section": "问题修复"
            }
          ]
        },
        "context": {
          "host": "https://github1.com",
          "owner": "juetan1",
          "repository": "apptify1"
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/node": "^18.15.3",
    "@typescript-eslint/parser": "^5.55.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nano-staged": "^0.8.0",
    "prettier": "^2.8.4",
    "release-it": "^15.10.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vite": "^3.1.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
