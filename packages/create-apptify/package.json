{
  "name": "create-apptify",
  "version": "0.0.4",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist",
    "template-*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "release": "release-it --config scripts/release-it/release-it.cjs",
    "prepare": "husky install scripts/husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/minimist": "^1.2.2",
    "commander": "^10.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "enquirer": "^2.3.6",
    "husky": "^8.0.3",
    "kolorist": "^1.7.0",
    "minimist": "^1.2.8",
    "ora": "^6.3.1",
    "release-it": "^15.10.1",
    "typescript": "^4.6.4",
    "vite": "^3.1.0"
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "vue"
    ],
    "rules": {}
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}